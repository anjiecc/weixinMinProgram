.inline {
    display: inline-block
}

image {
    width: 100%;
    height: 100%;
}

.index-container {
    position: relative;
}

.wrap {
    height: 80rpx;
    /* width: 100%; */
    display: flex;
    white-space: nowrap;
    background-color: #fff;
}

.topNavList {
    font-size: 35rpx;
    color: #888;
    display: inline-block;
    height: 100%;
    line-height: 76rpx;
    margin-left: 40rpx;
}

.nav-line {
    border-bottom: 6rpx solid #ec6a2c;
    width: 40rpx;
    margin: 0 auto;
}

.index-content .slide-image {
    width: 100%;
    height: 100%;
}

.real-time-msg {
    width: 100%;
    height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #6a6a6a;
    background-color: #fff;
    line-height: 80rpx;
}

.view-content {
    margin-top: 20rpx;
    background-color: #fff;
    /* height:400rpx; */
}

.view-content-title {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    justify-content: space-between
}

.title {
    font-size: 35rpx;
    color: #000;
    font-weight: 600;
}

.title:before {
    content: " ";
    border-left: 8rpx solid #df692a;
    margin-right: 10rpx;
}

.icon {
    vertical-align: -5rpx;
    margin-right: 7rpx;
}

.change-change {
    color: #df692a;
    font-size: 35rpx;
}

.content {
    display: flex;
    /* justify-content: space-between; */
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.bar {
    width: 49%;
    margin-left: 7rpx;
}

.img {
    height: 200rpx;
    position: relative
}

.time {
    font-size: 18rpx;
    height: 30rpx;
    color: #fff;
    text-align: center;
    background-color: rgba(0, 0, 0, 0.5);
    position: absolute;
    bottom: 0;
    right: 0;
}

.main-title {
    color: #333;
    font-size: 30rpx;
    margin-top: 20rpx;
}

.des {
    color: #afafaf;
    font-size: 25rpx;
    margin-top: 20rpx;
}

.swiper_container {
    height: 55rpx;
    width: 80vw;
}

.swiper_item {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2px;
    color: #6a6a6a;
    background-color: #fff;
    text-align: center;
}